  "features": {
    "multiTenancy": {
      "enabled": true,
      "model": "Shared Database, Shared Schema",
      "isolationMethod": "tenant_id column",
      "enforcement": "JWT token + middleware"
    },
    "authentication": {
      "type": "JWT",
      "passwordHashing": "bcryptjs (cost 12)",
      "tokenExpiry": "1 day"
    },
    "authorization": {
      "type": "Role-Based Access Control (RBAC)",
      "roles": ["super_admin", "tenant_admin", "user"]
    },
    "auditLogging": {
      "enabled": true,
      "tracks": ["CREATE", "UPDATE", "DELETE"],
      "table": "audit_logs",
      "metadata": "JSONB format"
    },
    "dataValidation": {
      "enabled": true,
      "enforcesLimits": true,
      "uniqueConstraints": ["email per tenant", "subdomain globally"]
    }
  },
